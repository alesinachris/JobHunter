# CA1031: Не перехватывать исключения общих типов
dotnet_diagnostic.CA1031.severity = silent
# CA1303: Не передавать литералы в качестве локализованных параметров
dotnet_diagnostic.CA1303.severity = silent
# IDE0050: Преобразовать в кортеж
dotnet_diagnostic.IDE0050.severity = silent
# CA1822: Пометьте члены как статические
dotnet_diagnostic.CA1822.severity = silent
# CA1707: Удалите символы подчеркивания из имени члена
dotnet_diagnostic.CA1707.severity = silent
# CA1711: Идентификаторы не должны иметь неправильных суффиксов
dotnet_diagnostic.CA1711.severity = silent
# CA1030: Используйте события, когда это уместно
dotnet_diagnostic.CA1030.severity = silent

dotnet_diagnostic.CA1716.severity = silent

dotnet_diagnostic.CA2201.severity = silent

